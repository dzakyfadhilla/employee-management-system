# Lombok configuration file
# This file configures Lombok behavior for the project

# Enable experimental features if needed
# lombok.experimental.flagUsage = warning

# Configure Lombok to work well with IDEs
lombok.addLombokGeneratedAnnotation = true

# Configure getter/setter generation
lombok.getter.lazy = false
lombok.setter.flagUsage = allowed
lombok.getter.flagUsage = allowed

# Configure toString generation
lombok.toString.flagUsage = allowed
lombok.toString.includeFieldNames = true

# Configure equals and hashCode generation
lombok.equalsAndHashCode.flagUsage = allowed
lombok.equalsAndHashCode.callSuper = skip

# Configure constructor generation
lombok.allArgsConstructor.flagUsage = allowed
lombok.noArgsConstructor.flagUsage = allowed
lombok.requiredArgsConstructor.flagUsage = allowed

# Configure Builder pattern
lombok.builder.flagUsage = allowed

# Configure Data annotation
lombok.data.flagUsage = allowed

# Configure Value annotation (immutable objects)
lombok.value.flagUsage = allowed

# Configure Slf4j logging
lombok.log.flagUsage = allowed

# Configure field naming
lombok.fieldNameConstants.flagUsage = allowed

# Enable copy constructor for @With
lombok.with.flagUsage = allowed

# Configure Jacksonized
lombok.jacksonized.flagUsage = allowed
